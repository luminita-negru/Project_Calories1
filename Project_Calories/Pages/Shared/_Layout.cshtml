<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Daily Calorie Calculator</title>
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Project_Calories.styles.css" asp-append-version="true" />
</head>
<style>
    img {
        height: 100px; /* Adjust the height as needed */
        margin-right: 50px; /* Optional margin to separate the logo from text */
        cursor: pointer; /* Add a pointer cursor to indicate it's clickable */
    }

    footer {
        position: absolute;
        border-top: 1px solid #ddd; /* Border on top */
        background-color: #f8f9fa; /* Light background color */
        color: #6c757d; /* Text color */
        padding: 20px 0; /* Padding on top and bottom */
    }

        footer a {
            color: #007bff; /* Link color */
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline; /* Underline link on hover */
            }
    /* Header styles */
    header div {
        background-color: #dff0d8;
    }
    footer div{
        background-color: #dff0d8;
    }

    header nav {
        background-color: #dff0d8;
    }

        /* Navbar brand styles */
        header a {
            font-size: 19px;
            color: #fff;
            text-decoration: solid;
            transition: color 0.3s ease; /* Smooth transition on hover */
        }

            header a:hover {
                color: #ffcc00; /* Change text color on hover */
            }

        /* List item styles */
        header li {
            margin-bottom: 20px;
            padding: 16px;
            background-color: #dff0d8; /* Light green background for list items */
            border-radius: 5px;
            transition: background-color 0.3s ease; /* Smooth transition on hover */
        }

            header li:hover {
            background-color: #dff0d8; /* Darker green background on hover */
                color: #fff; /* White text color on hover */
            }
</style>


<body>
    <header >
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom mb-3">
            <div class="container">
                <a href="/Index">
                    <img src="~/img/calories-calculator.png" class="navbar-logo">
                </a>
                <!---<img src="~/img/calories-calculator.png" alt="Calories Calculator Logo" class="navbar-logo" asp-page="/Index">
               <a class="navbar-brand" asp-area="" asp-page="/Index">Daily Calorie Calculator</a>-->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Foods/Index">Food</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Categories/Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Meals/Index">Meals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/MealItems/Index">Meal Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Members/Index">Members</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container text-center">
            &copy; 2023 - Daily Calorie Calculator - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Add the JavaScript directly in the <script> tag
        document.addEventListener("DOMContentLoaded", function () {
            // Example: Add a click event to change the color of the headers on click
            document.querySelector('h1').addEventListener('click', function () {
                this.style.color = '#3F7E44'; // Darker shade of green
            });

            // Example: Add a click event to toggle the color of list items
            var listItems = document.querySelectorAll('li');
            listItems.forEach(function (item) {
                item.addEventListener('click', function () {
                    this.style.backgroundColor = this.style.backgroundColor === '#5cb85c' ? '#dff0d8' : '#5cb85c';
                    this.style.color = this.style.color === '#fff' ? '#333' : '#fff';
                });
            });
        });
    </script>
</body>
</html>