@page
@model Project_Calories.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categorie";
}
<style>
    .container {
        margin-top: 20px;
    }

    h1 {
        color: #4CAF50; /* Verde inchis */
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #4CAF50;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: black; /* Verde inchis */
        color: #4CAF50;
    }

    a {
        text-decoration: none;
        color: #007bff; /* Albastru deschis */
    }

    a:hover {
            text-decoration: underline;
        }
</style>
    <h1>Categorie List</h1>

<p>
        <a asp-page="Create" class="btn btn-success">
            <i class="fa fa-plus"></i> Create New
        </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Categorie Name</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Categorie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.CategorieId">Edit</a>
                        <!---<a asp-page="./Details" class="btn btn-primary" asp-route-id="@item.CategorieId">Details</a> -->
                    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.CategorieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
