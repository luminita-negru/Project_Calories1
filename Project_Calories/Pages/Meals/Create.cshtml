@page
@model Project_Calories.Pages.Meals.CreateModel

@{
    ViewData["Title"] = "Create";
}

<style>
    .container {
        margin-top: 20px;
    }

    h1 {
        color: #4CAF50; /* Verde inchis */
    }

    h4 {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-back {
        margin-top: 20px;
    }
</style>
<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Meal.Name" class="control-label">Name</label>
                <input asp-for="Meal.Name" class="form-control" />
                <span asp-validation-for="Meal.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-success">
        <i class="fa fa-plus"></i> Back to List
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
