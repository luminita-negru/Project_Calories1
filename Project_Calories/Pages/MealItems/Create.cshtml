@page
@model Project_Calories.Pages.MealItems.CreateModel

@{
    ViewData["Title"] = "Create";
}
<style>
    .container {
        margin-top: 20px;
    }

    h1 {
        color: #4CAF50; /* Verde inchis */
    }

    h4 {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-back {
        margin-top: 20px;
    }
</style>
<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MealItem.MealId" class="control-label">Meal</label>
                <select asp-for="MealItem.MealId" class ="form-control" asp-items="ViewBag.MealId"></select>
            </div>

            <div class="form-group">
                <label asp-for="MealItem.FoodId" class="control-label">Food</label>
                <select asp-for="MealItem.FoodId" class ="form-control" asp-items="ViewBag.FoodId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MealItem.Quantity" class="control-label">Quantity</label>
                <input asp-for="MealItem.Quantity" class="form-control" />
                <span asp-validation-for="MealItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealItem.Date" class="control-label">Date</label>
                <input asp-for="MealItem.Date" class="form-control" />
                <span asp-validation-for="MealItem.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-success">
        <i class="fa fa-plus"></i> Back to List
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
