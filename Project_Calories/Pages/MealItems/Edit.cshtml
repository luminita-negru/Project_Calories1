@page
@model Project_Calories.Pages.MealItems.EditModel

@{
    ViewData["Title"] = "Edit";
}
<style>
    .container {
        margin-top: 20px;
    }

    h4 {
        color: #4CAF50; /* Verde inchis */
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #4CAF50;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: black; /* Verde inchis */
        color: #4CAF50;
    }

    a {
        text-decoration: none;
        color: #007bff; /* Albastru deschis */
    }

        a:hover {
            text-decoration: underline;
        }
</style>
<h4>Meal Item Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MealItem.MealItemId" />

            <div class="form-group">
                <label asp-for="MealItem.MealId" class="control-label">Meal</label>
                <select asp-for="MealItem.MealId" class="form-control" asp-items="ViewBag.MealId"></select>
                <span asp-validation-for="MealItem.MealId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealItem.FoodId" class="control-label">Food</label>
                <select asp-for="MealItem.FoodId" class="form-control" asp-items="ViewBag.FoodId"></select>
                <span asp-validation-for="MealItem.FoodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealItem.Quantity" class="control-label"></label>
                <input asp-for="MealItem.Quantity" class="form-control" />
                <span asp-validation-for="MealItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealItem.Date" class="control-label"></label>
                <input asp-for="MealItem.Date" class="form-control" />
                <span asp-validation-for="MealItem.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-success">
        <i class="fa fa-plus"></i> Back to List
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
