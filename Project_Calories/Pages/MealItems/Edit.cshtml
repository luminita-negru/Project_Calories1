@page
@model Project_Calories.Pages.MealItems.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MealItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MealItem.MealItemId" />

            <div class="form-group">
                <label asp-for="MealItem.MealId" class="control-label"></label>
                <select asp-for="MealItem.MealId" class="form-control" asp-items="ViewBag.MealId"></select>
                <span asp-validation-for="MealItem.MealId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealItem.FoodId" class="control-label"></label>
                <select asp-for="MealItem.FoodId" class="form-control" asp-items="ViewBag.FoodId"></select>
                <span asp-validation-for="MealItem.FoodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealItem.Quantity" class="control-label"></label>
                <input asp-for="MealItem.Quantity" class="form-control" />
                <span asp-validation-for="MealItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealItem.Date" class="control-label"></label>
                <input asp-for="MealItem.Date" class="form-control" />
                <span asp-validation-for="MealItem.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
