@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
    /* Add the CSS styles directly in the <style> tag */
    body {
        font-family: 'Arial', sans-serif;
        background-color: lightgreen; /* Light gray background */
        color: #333; /* Dark text color */
    }
    
    h1, h2 {
        color: #4CAF50; /* Dominant green color for headers */
    }
</style>

<h1>Welcome to Your Calorie Tracker!</h1>

<p>Hello, @User.Identity.Name!</p>

<form method="get">
    <div class="form-group">
        <label for="SelectedDate">Select Date:</label>
        <input type="date" class="form-control" id="SelectedDate" name="SelectedDate" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Show Calories</button>
</form>

<p>Total Calories Consumed Today: @Model.TotalCaloriesConsumed</p>
<p>Calories Goal: @Model.CaloriesGoal</p>

<h2>Calories per Meal:</h2>
<ul>
        @if (Model.CaloriesPerMeal != null)
        {
            @foreach (var kvp in Model.CaloriesPerMeal)
            {
            <li>@kvp.Key: @kvp.Value</li>
            }
        }
        else
        {
        <li>No data available</li>
        }
</ul>

